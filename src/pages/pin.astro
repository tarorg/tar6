---
import Layout from '../layouts/Layout.astro';
import Menu from '../components/Menu.astro';
---

<Layout title="pin">
  <Menu />
  <main class="container mx-auto p-4">
    <h1 class="headline-large mb-4">pin</h1>
    <p class="mb-4">This is the Pin page.</p>
    
    <a href="/pin/instances" class="block">
      <div class="bg-white shadow-md rounded-lg p-6 mb-4 cursor-pointer hover:bg-gray-50 transition-colors duration-200">
        <h2 class="text-xl font-semibold text-blue-600 hover:text-blue-800">
          Instances
        </h2>
        <p class="text-gray-600 mt-2">View and manage all instances</p>
      </div>
    </a>
  </main>
</Layout>

<style>
  .headline-large {
    font-size: 2rem;
    font-weight: bold;
  }
</style>
