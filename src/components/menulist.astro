---
const menuItems = [
  { name: "Tar", path: "/" },
  { name: "Pin", path: "/pin" },
  { name: "Instances", path: "/pin/instances" },
  { name: "Prod", path: "/pin/prod" },
  { name: "Reports", path: "/reports" },
  { name: "Files", path: "/files" },
  { name: "Posts", path: "/posts" },
  { name: "Pathai", path: "/pathai" },
  { name: "Settings", path: "/settings" },
  { name: "Links", path: "/links" }
];

const currentPath = Astro.url.pathname;
---

<div class="container">
  <ul class="options">
    {menuItems.map((item) => (
      <li class={currentPath === item.path ? "active" : ""}>
        <a href={item.path}>{item.name}</a>
      </li>
    ))}
  </ul>
</div>

<style>
  .container {
    background-color: #ffffff;
    width: 100%;
    min-height: 100vh;
    display: flex;
    justify-content: center;
    align-items: flex-start;
    padding: 24px;
    box-sizing: border-box;
  }
  .options {
    list-style-type: none;
    padding: 0;
    margin: 0;
    width: 100%;
    max-width: 600px;
  }
  .options li {
    padding: 16px 0;
    font-size: 24px;
    font-weight: 700;
    border-bottom: 1px solid #f0f0f0;
  }
  .options li:last-child {
    border-bottom: none;
  }
  .options li a {
    color: #000000;
    text-decoration: none;
  }
  .options li.active a {
    color: #0000FF; /* Change this to your preferred active color */
  }
</style>
